<div class="row align-middle"></div>
    <div class="signup-header">  <!-- flex row -->
        <h2 class="p-1">Sign Up</h2>
    </div>

    <form class="form signup-form">
        <div class="form-group">
            <label for="email-signup" class="form-label">Email:</label>
            <input class="form-input form-control" type="text" id="email-signup" />
        </div>
        <div class="form-group">
            <label for="username-signup" class="form-label">Username:</label>
            <input class="form-input form-control" type="text" id="username-signup" />
        </div>
        <div class="form-group">
            <label for="password-signup" class="form-label">Password:</label>
            <input class="form-input form-control" type="password" id="password-signup" />
        </div>
        <div class="d-grid gap-3 mb-3">
            <button class="btn btn-secondary w-100" type="submit">Create Your Account</button>
        </div>
        <div class="login-link">
                <a href="/login" class="link-dark">Login</a>
        </div>
    </form>
    
</div>
