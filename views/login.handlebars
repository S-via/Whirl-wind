{{!-- Bootstrap CSS form from Finola's Challenge 14 --}}
<div class="row align-middle">
    <form class="form login-form">
        <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-input" type="text" id="username-login" />
        </div>

        <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-login" />
        </div>

        <div class="form-group">
            <button class="btn btn-secondary login-btn" type="submit">Login</button>
        </div>

        <div class="form-group">
            <button class="btn btn-secondary signup-btn" type="submit">Sign Up</button>
        </div>
    </form>
</div>

